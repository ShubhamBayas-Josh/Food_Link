<div class="admin-dashboard">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="container-fluid px-4 py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="dashboard-title">Admin Dashboard</h1>
        <% if current_admin %>
          <p class="admin-welcome">Welcome back, <%= current_admin.name %></p>
        <% end %>
      </div>
      <div>
        <%= link_to "View Reports", reports_admins_path, class: "btn btn-primary" %>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="stat-card total-users">
          <div class="stat-card-body">
            <div class="stat-card-icon">
              <i class="fas fa-users"></i>
            </div>
            <div class="stat-card-info">
              <h6>Total Users</h6>
              <h2><%= @users_count %></h2>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="stat-card donations">
          <div class="stat-card-body">
            <div class="stat-card-icon">
              <i class="fas fa-gift"></i>
            </div>
            <div class="stat-card-info">
              <h6>Food Donations</h6>
              <h2><%= @pending_donations + @accepted_donations + @rejected_donations %></h2>
              <div class="stat-details">
                <span>Pending: <%= @pending_donations %></span>
                <span>Accepted: <%= @accepted_donations %></span>
                <span>Rejected: <%= @rejected_donations %></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="stat-card claims">
          <div class="stat-card-body">
            <div class="stat-card-icon">
              <i class="fas fa-hand-holding-heart"></i>
            </div>
            <div class="stat-card-info">
              <h6>Total Claims</h6>
              <h2><%= @pending_claims + @accepted_claims + @rejected_claims %></h2>
              <div class="stat-details">
                <span>Pending: <%= @pending_claims %></span>
                <span>Accepted: <%= @accepted_claims %></span>
                <span>Rejected: <%= @rejected_claims %></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="stat-card feedback">
          <div class="stat-card-body">
            <div class="stat-card-icon">
              <i class="fas fa-comments"></i>
            </div>
            <div class="stat-card-info">
              <h6>Total Feedbacks</h6>
              <h2><%= @feedback_count %></h2>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
      <div class="col-md-4">
        <div class="action-card">
          <div class="action-card-body">
            <div class="action-icon">
              <i class="fas fa-gift"></i>
            </div>
            <h5>Manage Donations</h5>
            <p>View and approve new food donation requests.</p>
            <a href="<%= donations_path %>" class="btn btn-outline-primary">View Donations</a>
          </div>
        </div>
      </div>

      <div class="col-md-4">
      <div class="action-card">
          <div class="action-card-body">
            <div class="action-icon">
              <i class="fas fa-users"></i>
            </div>
            <h5>User Management</h5>
            <p>Manage NGO representatives and volunteers.</p>
            <a href="<%= users_path %>" class="btn btn-outline-primary">Manage Users</a>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="action-card">
          <div class="action-card-body">
            <div class="action-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <h5>Reports & Analytics</h5>
            <p>Generate reports and track donation trends.</p>
            <a href="<%= reports_admins_path %>" class="btn btn-outline-primary">View Reports</a>
          </div>
        </div>
      </div>
    </div>

