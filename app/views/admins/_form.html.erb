<style>
  body {
    overflow: hidden; /* Prevents scrolling */
  }
</style>

<div class="d-flex justify-content-center align-items-center position-fixed top-0 start-0 w-100 h-100">
  <div class="card shadow-lg p-4 bg-light" style="width: 30rem;">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Admin Form</h3>
      
      <%= form_with(model: admin, local: true) do |form| %>
        <% if admin.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">
              <%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:
            </h4>
            <ul class="mb-0">
              <% admin.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label fw-bold" %>
          <%= form.text_field :name, class: "form-control border-2 shadow-sm", placeholder: "Enter admin name" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Save Admin", class: "btn btn-primary btn-lg rounded-pill shadow-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
