<div class="card shadow-lg p-4" style="max-width: 600px; margin: 0 auto;">
  <div class="card-body">
    <h5 class="card-title text-center mb-4">Hello <%= @resource.email %>!</h5>

    <p class="card-text">We're contacting you to notify you that your password has been changed.</p>

    <div class="d-grid gap-2 mt-4">
      <%= link_to 'Login with your new password', new_session_path(@resource_name), class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>
