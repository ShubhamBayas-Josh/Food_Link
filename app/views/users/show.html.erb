<div class="container my-4">
  <h1 class="text-center mb-4">User Details</h1>

  <div class="card">
    <div class="card-body">
      <p><strong>Name:</strong> <%= @user.name %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Role:</strong> <%= @user.role %></p>
      <p><strong>Address:</strong> <%= @user.address %></p>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning mr-2' %>
    <%= link_to 'Back to All Users', users_path, class: 'btn btn-secondary mr-2' %>
    <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger' %>
  </div>
</div>
