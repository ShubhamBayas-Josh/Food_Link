<div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <% if current_admin %>
          <p class="admin-welcome">Welcome back, <%= current_admin.name %></p>
        <% end %>
      </div>
    </div>
<div class="container my-5">
  <h1 class="text-center mb-4 display-4 font-weight-bold text-primary">User Details</h1>

  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title mb-0">User Information</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p class="mb-3"><strong>Name:</strong> <span class="text-muted"><%= @user.name %></span></p>
          <p class="mb-3"><strong>Email:</strong> <span class="text-muted"><%= @user.email %></span></p>
        </div>
        <div class="col-md-6">
          <p class="mb-3"><strong>Role:</strong> <span class="text-muted"><%= @user.role %></span></p>
          <p class="mb-3"><strong>Address:</strong> <span class="text-muted"><%= @user.address %></span></p>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning btn-lg mx-2' %>
    <%= link_to 'Back to All Users', users_path, class: 'btn btn-secondary btn-lg mx-2' %>
  </div>
</div>

<style>
  .card {
    border-radius: 10px;
    overflow: hidden;
  }

  .card-header {
    border-bottom: none;
  }

  .card-body {
    padding: 2rem;
  }

  .btn-warning {
    background-color: #ffc107;
    border: none;
    padding: 10px 20px;
    font-size: 1.1rem;
    transition: background-color 0.3s ease;
  }

  .btn-warning:hover {
    background-color: #e0a800;
  }

  .btn-secondary {
    background-color: #6c757d;
    border: none;
    padding: 10px 20px;
    font-size: 1.1rem;
    transition: background-color 0.3s ease;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .text-muted {
    color: #6c757d !important;
  }
</style>