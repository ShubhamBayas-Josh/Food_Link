

<div class="container-fluid px-4 py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <% if current_admin %>
          <p class="admin-welcome">Welcome back, <%= current_admin.name %></p>
        <% end %>
      </div>
    </div>
<div class="container my-5">
  <h1 class="text-center mb-4 display-4 font-weight-bold text-primary">All Users</h1>
  

  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title mb-0">User List</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="thead-light">
            <tr>
              <th scope="col" class="py-3">Name</th>
              <th scope="col" class="py-3">Email</th>
              <th scope="col" class="py-3">Role</th>
              <th scope="col" class="py-3">Address</th>
              <th scope="col" class="py-3 text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="align-middle">
                <td class="py-3"><%= user.name %></td>
                <td class="py-3"><%= user.email %></td>
                <td class="py-3"><%= user.role %></td>
                <td class="py-3"><%= user.address %></td>
                <td class="py-3 text-center">
                  <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-warning btn-sm mx-1' %>
                  <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure? This will remove all associated records.' }, class: 'btn btn-outline-danger btn-sm mx-1' %>
                <%= link_to 'Show', user_path(user), class: 'btn btn-outline-info btn-sm mx-1' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%# <div class="card-footer bg-light">
      <%= link_to 'Create New User', new_user_path, class: 'btn btn-primary btn-lg btn-block' %>
    <%# </div> %> 
  </div>
</div>

<style>
  .table-hover tbody tr:hover {
    background-color: #f8f9fa;
    transition: background-color 0.2s ease;
  }

  .card {
    border-radius: 10px;
    overflow: hidden;
  }

  .card-header {
    border-bottom: none;
  }

  .card-footer {
    border-top: none;
  }

  .btn-outline-warning:hover {
    background-color: #ffc107;
    color: #000;
  }

  .btn-outline-danger:hover {
    background-color: #dc3545;
    color: #fff;
  }

  .btn-block {
    padding: 10px;
    font-size: 1.1rem;
  }
</style>