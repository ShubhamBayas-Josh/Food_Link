<div class="container my-4">
  <h1 class="text-center mb-4">All Users</h1>

  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.address %></td>
            <td>
              <%= link_to 'Show', user_path(user), class: 'btn btn-info btn-sm', style: 'margin-right: 10px;' %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm', style: 'margin-right: 10px;' %>
              <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'Create New User', new_user_path, class: 'btn btn-primary', style: 'margin-top: 20px;' %>
</div>
